{
  "files": [],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/logger" },
    { "path": "./packages/db" },
    { "path": "./packages/sim" },
    { "path": "./apps/sandbox" }
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}