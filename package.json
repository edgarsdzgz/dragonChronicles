{
  "name": "draconia",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=18.17"
  },
  "prettier": "./configs/prettier/.prettierrc.cjs",
  "eslintConfig": "./configs/eslint/.eslintrc.cjs",
  "scripts": {
    "clean": "rm -rf dist packages/*/dist apps/*/dist && find . -name 'tsconfig.tsbuildinfo' -delete || true",
    "build": "tsc -b",
    "build:ci": "tsc -b --pretty false",
    "typecheck": "tsc -b --pretty false --noEmit",
    "list": "pnpm -w list --depth -1",
    "dev:sandbox": "pnpm --filter @draconia/sandbox run dev",
    "test:unit": "node tests/test-unit-shared.mjs",
    "test:integration": "node tests/test-integration-graph.mjs",
    "test:e2e": "node tests/test-e2e-build.mjs",
    "test:ts-strict": "node tests/test-ts-strict.mjs",
    "pretest:node": "pnpm -w run build:ci",
    "test:node": "node tests/run-all-pretty.mjs",
    "test:vitest": "vitest run --config configs/vitest/vitest.config.ts --reporter=dot --reporter=default",
    "test:vitest:json": "npx vitest run --config configs/vitest/vitest.config.ts --reporter=json --outputFile tests/.artifacts/vitest.json",
    "test:vitest:render": "vitest run --config configs/vitest/vitest.render.config.ts --reporter=dot --reporter=default",
    "test:all": "pnpm -w run test:node && (pnpm -w run test:vitest || node -e \"console.log('Vitest skipped - Node tests completed')\") && (pnpm -w run test:vitest:render || node -e \"console.log('Render tests skipped')\") && (pnpm -w run test:vitest:json || node -e \"console.log('Vitest JSON skipped')\") && node tests/summary.mjs",
    "test:db": "npx vitest run --config configs/vitest/vitest.db.config.ts",
    "db:nuke": "node scripts/nuke-idb.mjs",
    "db:seed": "node scripts/seed-profiles.mjs",
    "ws:check": "pnpm -w list --depth -1 && pnpm -w -r run echo-ok --if-present",
    "echo-ok": "echo ok",
    "test:ts:audit": "node scripts/tsconfig-audit.mjs",
    "test:ts:should-fail": "node scripts/test-tsc-should-fail.mjs",
    "test:ts:workspace": "node scripts/test-tsc-workspace.mjs",
    "test:ts:all": "pnpm run test:ts:audit && pnpm run test:ts:workspace && pnpm run test:ts:should-fail",
    "docs:lint": "markdownlint -c .markdownlint.json --ignore-path .markdownlintignore \"**/*.md\"",
    "docs:links": "linkinator docs/README.md --recurse --config .linkinatorrc.json",
    "docs:check": "node .github/scripts/require-docs-change.mjs",
    "lint": "eslint . --cache --cache-location ./.cache/eslint --max-warnings 0",
    "lint:quiet": "eslint . --cache --cache-location ./.cache/eslint --max-warnings 0 --quiet",
    "format": "prettier --config ./configs/prettier/.prettierrc.cjs --ignore-path ./configs/prettier/.prettierignore --write \"**/*.{ts,tsx,js,json,md,css,scss,svelte}\"",
    "format:check": "prettier --config ./configs/prettier/.prettierrc.cjs --ignore-path ./configs/prettier/.prettierignore --check \"{apps,packages,configs,scripts,tests/ts-strict,tests/fixtures,tests/lint}/**/*.{ts,tsx,js,json,md,css,scss,svelte}\" \"*.{ts,tsx,js,json,md,css,scss,svelte}\"",
    "verify:style": "pnpm run lint:quiet && pnpm run format:check",
    "verify:all": "node tests/run-all.mjs && pnpm run lint:quiet && pnpm run format:check && pnpm run docs:lint && pnpm run docs:links",
    "prepare": "node -e \"try{require('husky').install()}catch(e){process.exitCode=0}\"",
    "commitlint": "commitlint --from=HEAD~1 --to=HEAD",
    "commitlint:stdin": "commitlint",
    "test:hooks:audit": "node scripts/husky-audit.mjs",
    "test:hooks:unit": "node scripts/test-commitlint-unit.mjs",
    "test:hooks:integration": "node scripts/test-precommit-format.mjs",
    "test:hooks:e2e": "node scripts/test-commit-msg-hook.mjs",
    "test:hooks:all": "pnpm run test:hooks:audit && pnpm run test:hooks:unit && pnpm run test:hooks:integration && pnpm run test:hooks:e2e",
    "test:lint:unit": "node scripts/test-lint-unit.mjs",
    "test:lint:workspace": "node scripts/test-lint-workspace.mjs",
    "test:lint:e2e": "node scripts/test-precommit-e2e.mjs",
    "test:lint:all": "pnpm run test:lint:unit && pnpm run test:lint:workspace && pnpm run test:lint:e2e",
    "size:check": "node scripts/size-budgets.mjs"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@types/node": "^20.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.11.0",
    "fake-indexeddb": "^6.1.0",
    "husky": "^9.1.7",
    "linkinator": "^6.1.2",
    "lint-staged": "^16.1.5",
    "markdownlint-cli": "^0.41.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte-eslint-parser": "^1.3.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,svelte}": [
      "eslint --config ./configs/eslint/.eslintrc.cjs --fix"
    ],
    "*.{ts,tsx,js,json,md,css,scss,svelte}": [
      "prettier --config ./configs/prettier/.prettierrc.cjs --write"
    ]
  },
  "dependencies": {
    "dexie": "^4.2.0",
    "zod": "^4.1.1"
  }
}
